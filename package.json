{
  "name": "@tunnckocore/release",
  "description": "Release and publish a new project to NPM and GitHub, automatically. Following Conventional Commits specification and Semver. It provides GitHub App, similar to [semantic-release][], too.",
  "license": "Apache-2.0",
  "licenseStart": "2018",
  "scripts": {
    "now-start": "PRIVATE_KEY=$(echo $PRIVATE_KEY | base64 -d) yarn app",
    "app": "probot run ./index.js",

    "docs": "verb",
    "lint": "eslint '**/*.js' --cache --fix --quiet --format codeframe",
    "test-only": "asia -r esm",
    "test": "nyc asia",
    "precommit": "yarn run lint && yarn run test-only",
    "commit": "yarn dry",
    "dry": "git add -A && git status --porcelain && gitcommit",
    "release": "tunnckocore-release",

    "deploy:rm": "now rm -y @tunnckocore/release",
    "deploy:now": "now && now alias",
    "deploy": "(yarn deploy:rm && yarn deploy:now) || yarn deploy:now"
  },
  "engines": {
    "node": "^8.10.0 || >=10.13.0"
  },
  "dependencies": {
    "detect-next-version": "^3.1.0",
    "esm": "^3.0.84",
    "parse-commit-message": "^3.2.0",
    "probot": "^7.3.1",
    "probot-config": "^0.2.0"
  },
  "devDependencies": {
    "@tunnckocore/config": "^1.0.2",
    "asia": "^0.19.7"
  },
  "files": [
    "src",
    "index.js"
  ],
  "main": "index.js",
  "module": "src/index.js",
  "typings": "src/index.d.ts",
  "version": "0.11.1",
  "repository": "tunnckoCore/release",
  "homepage": "https://github.com/tunnckoCore/release",
  "author": "Charlike Mike Reagent (https://tunnckocore.com)",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "renovate": {
    "extends": "tunnckocore"
  },
  "verb": {
    "run": true,
    "toc": {
      "render": true,
      "method": "preWrite",
      "maxdepth": 4
    },
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "related": {
      "list": [
        "asia",
        "docks",
        "gitcommit",
        "git-commits-since",
        "parse-commit-message",
        "detect-next-version"
      ]
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "new-release",
      "semantic-release"
    ]
  }
}
