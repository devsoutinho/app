{
  "name": "@tunnckocore/release",
  "description": "Release and publish a new project to NPM and GitHub, automatically. Following Conventional Commits specification and Semver. It provides GitHub App, similar to [semantic-release][], too.",
  "license": "Apache-2.0",
  "licenseStart": "2018",
  "scripts": {
    "now-start": "PRIVATE_KEY=$(echo $PRIVATE_KEY | base64 -d) yarn app",
    "app": "probot run ./src/app.js",
    "docs": "docks --outfile .verb.md && verb",
    "lint": "eslint src test index.js cli.js --cache --fix --quiet --format codeframe",
    "test": "nyc asia",
    "precommit": "yarn lint && yarn test",
    "commit": "yarn dry",
    "dry": "git add -A && git status --porcelain && gitcommit -sS",
    "release": "node cli.js",
    "deploy:rm": "now rm -y @tunnckocore/release",
    "deploy:now": "now && now alias",
    "deploy": "(yarn deploy:rm && yarn deploy:now) || yarn deploy:now"
  },
  "engines": {
    "node": "^8.11.0 || >=10.13.0"
  },
  "dependencies": {
    "@tunnckocore/execa": "^2.1.2",
    "@tunnckocore/git-semver-tags": "^0.2.0",
    "dedent": "^0.7.0",
    "detect-next-version": "^3.0.1",
    "esm": "^3.0.84",
    "git-commits-since": "^1.0.1",
    "is-ci": "^1.2.1",
    "mri": "^1.1.1",
    "parse-commit-message": "^2.1.4",
    "probot": "^7.3.1",
    "probot-config": "^0.2.0"
  },
  "devDependencies": {
    "asia": "^0.19.7",
    "eslint": "^5.8.0",
    "eslint-config-esmc": "^1.0.12",
    "gitcommit": "^1.0.13",
    "smee-client": "^1.0.2"
  },
  "files": [
    "src",
    "index.js",
    "cli.js"
  ],
  "bin": {
    "release": "cli.js",
    "tunnckocore-release": "cli.js"
  },
  "main": "index.js",
  "module": "src/index.js",
  "typings": "src/index.d.ts",
  "version": "0.8.0",
  "repository": "tunnckoCore/release",
  "homepage": "https://github.com/tunnckoCore/release",
  "author": "Charlike Mike Reagent (https://tunnckocore.com)",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "renovate": {
    "extends": "tunnckocore"
  },
  "verb": {
    "run": true,
    "toc": {
      "render": true,
      "method": "preWrite",
      "maxdepth": 4
    },
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "related": {
      "list": [
        "asia",
        "charlike",
        "docks",
        "gitcommit",
        "@tunnckocore/execa",
        "@tunnckocore/package-json",
        "@tunnckocore/create-project",
        "@tunnckocore/update",
        "@tunnckocore/config",
        "@tunnckocore/scripts"
      ]
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "new-release",
      "semantic-release"
    ]
  }
}
